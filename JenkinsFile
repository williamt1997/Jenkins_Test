pipeline {
    agent any

    
    stages {
        stage('SCM') {
            steps{
                checkout scm
            }
        }

        stage('Step 1: Performing Code Analysis Via SonarQube') {
            def scannerHome = tool 'SonarScanner';
            withSonarQubeEnv() {
              sh "${scannerHome}/bin/sonar-scanner"
            }
        }

        stage("Step 2: Validating Quality Of Code") {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
