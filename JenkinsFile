pipeline {
    agent any

    
    node {
        stage('SCM') {
            steps{
                checkout scm
            }
        }

        stage('Step 1: Performing Code Analysis Via SonarQube') {
            steps{
                withSonarQubeEnv(installationName: 'sq1') {
                  sh "sq1/bin/sonar-scanner"
                }
            }
        }

        stage("Step 2: Validating Quality Of Code") {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
